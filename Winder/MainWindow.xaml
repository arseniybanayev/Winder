<Window x:Class="Winder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Winder"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525">
	<Window.Style>
		<!-- These are the font family and size traditionally used in Finder -->
		<Style TargetType="{x:Type Window}">
			<Setter Property="FontFamily" Value="Helvetica" />
			<Setter Property="FontSize" Value="13" />
		</Style>
	</Window.Style>
	<Grid Margin="10">
		<ListBox Name="ListBoxFiles" SelectionMode="Extended" HorizontalContentAlignment="Stretch">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,2">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="75" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="{Binding Name}" Grid.Column="0" />
						<TextBlock Text="{Binding IsDirectory}" Grid.Column="1" />
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>