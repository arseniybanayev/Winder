<DataTemplate
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<Grid Margin="0,2">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="20" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.Resources>
			<BooleanToVisibilityConverter x:Key="BoolToVisibility" />
		</Grid.Resources>
		<Image Source="{Binding SmallImage}"
			   Width="16" Height="16"
			   Grid.Column="0" />
		<TextBlock Text="{Binding NameWithoutExtension}"
				   TextTrimming="CharacterEllipsis" Margin="8,0,8,0"
				   Grid.Column="1" />
		<Image Source="{StaticResource DirectoryOpenIcon}"
			   Visibility="{Binding IsDirectory, Converter={StaticResource BoolToVisibility}}"
			   Width="10" Height="10"
			   Grid.Column="2" />
	</Grid>
</DataTemplate>